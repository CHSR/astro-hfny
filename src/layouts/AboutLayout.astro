---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Sidebar from "@/components/Sidebar.astro";

const {
  title,
  activeMainText = "About",
  activeSubText = "About HFNY",
} = Astro.props;

const menuItems = [
  {
    text: "About HFNY",
    href: "/about",
    active: true,
  },
  {
    text: "Timeline",
    href: "/about/timeline",
    active: false,
  },
  {
    text: "What Makes Us Unique",
    href: "/about/unique",
    active: false,
  },
  {
    text: "Administration",
    href: "/about/administration",
    active: false,
  },
  {
    text: "Testimonials",
    href: "/about/testimonials",
    active: false,
  },
].map((item) => ({
  ...item,
  active: activeSubText === item.text,
}));
---

<Layout title={title}>
  <Header activeMainText={activeMainText} />
  <!-- begin content area -->
  <div id="content">
    <!-- begin 2-column layout -->
    <div id="col-1">
      <Sidebar menuItems={menuItems} />
    </div><!-- end col-1 -->

    <div id="col-2">
      <!-- begin text area -->
      <div id="text-area">
        <slot />
      </div>
    </div>
  </div>
  <Footer />
</Layout>

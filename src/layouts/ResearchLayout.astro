---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const {
  title,
  activeMainText = "Research",
  activeSubText = "Research",
} = Astro.props;

const menuItems = [
  {
    text: "Research & Evaluation",
    href: "/research",
    active: true,
  },
  {
    text: "Continuous Quality Improvement (CQI)",
    href: "/research/cqi",
    active: false,
  },
  {
    text: "Research to Practice",
    href: "/research/researchtopractice",
    active: false,
  },
  {
    text: "Randomized Control Trial (RCT)",
    href: "/research/rct",
    active: false,
  },
  {
    text: "Publications",
    href: "/research/publications",
    active: false,
  },
].map((item) => ({
  ...item,
  active: activeSubText === item.text,
}));
---

<Layout title={title}>
  <Header activeMainText={activeMainText} />
  <!-- begin content area -->
  <div id="content">
    <!-- begin 2-column layout -->
    <div id="col-1">
      <Sidebar menuItems={menuItems} />
    </div><!-- end col-1 -->

    <div id="col-2">
      <!-- begin text area -->
      <div id="text-area">
        <slot />
      </div>
    </div>
  </div>
  <Footer />
</Layout>

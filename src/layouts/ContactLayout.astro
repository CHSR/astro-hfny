---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const {
  title,
  activeMainText = "Contact",
  activeSubText = "Contact Us",
} = Astro.props;

const menuItems = [
  {
    text: "Contact Us",
    href: "/contact",
    active: true,
  },
  {
    text: "NYS Office of Children and Family Services",
    href: "/contact/ocfs",
    active: false,
  },
  {
    text: "Prevent Child Abuse New York",
    href: "/contact/pcany",
    active: false,
  },
  {
    text: "Center for Human Services Research UAlbany/SUNY",
    href: "/contact/chsr",
    active: false,
  },
].map((item) => ({
  ...item,
  active: activeSubText === item.text,
}));
---

<Layout title={title}>
  <Header activeMainText={activeMainText} />
  <!-- begin content area -->
  <div id="content">
    <!-- begin 2-column layout -->
    <div id="col-1">
      <Sidebar menuItems={menuItems} />
    </div><!-- end col-1 -->

    <div id="col-2">
      <!-- begin text area -->
      <div id="text-area">
        <slot />
      </div>
    </div>
  </div>
  <Footer />
</Layout>

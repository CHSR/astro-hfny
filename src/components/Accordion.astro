---
interface AccordionItems {
  togglerTitle: string;
  togglerContent: string;
}

export interface Props {
  accItems: AccordionItems[];
}
const { accItems } = Astro.props;
---

<div id="accordion">
  {
    accItems.map((item: AccordionItems) => (
      <div class="accordion-item">
        <h2 class="accordion-toggle">
          <p set:html={item.togglerTitle} />
        </h2>
        <div class="accordion-content">
          <p set:html={item.togglerContent} />
        </div>
      </div>
    ))
  }
</div>

<script
  type="text/javascript"
  src="https://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
<script type="text/javascript" src="../js/accordion.js"></script>
<style>
  /* accordion styles ===================== */
  .accordion-toggle {
    color: #39c;
    text-decoration: underline;
    cursor: pointer;
  }
  .accordion-content {
    display: none;
    padding-bottom: 0;
  }
  .accordion-content.default {
    display: block;
  }
  .instructions {
    background-image: url(../images/template_images/instructions-icon.png);
    background-repeat: no-repeat;
    position: left top;
    color: #1d809c;
    padding-left: 1.5em;
  }
</style>

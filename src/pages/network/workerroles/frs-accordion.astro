---
import NetworkLayout from "@/layouts/NetworkLayout.astro";
import Accordion from "@/components/Accordion.astro";

// Define accordion items
const accItems = [
  {
    togglerTitle: "FROG",
    togglerContent: `
      <ul>
        <li>
          <a href="/Staff/Documents/FROG TOOLKIT 7.22.pdf">FROG Toolkit</a>
        </li>
      </ul>
    `,
  },
  {
    togglerTitle: "Level Change Forms",
    togglerContent: `
      <ul>
        <li>
          <a
            href="/Staff/Documents/Level 1 to Level 2 Form.pdf"
            target="_blank">Level 1 to Level 2</a
          >
        </li>
        <li>
          <a
            href="/Staff/Documents/Level 2 to Level 3 Form.pdf"
            target="_blank">Level 2 to Level 3</a
          >
        </li>
        <li>
          <a
            href="/Staff/Documents/Level 3 to Level 4 and Completion Form.pdf"
            target="_blank">Level 3 to Level 4 and Completion form</a
          >
        </li>
      </ul>
    `,
  },
  {
    togglerTitle: "HFNY Workforce Development Competencies",
    togglerContent: `
      <ul>
        <li><a href="/Staff/Competencies.html">Competencies Page</a></li>
      </ul>
    `,
  },
  {
    togglerTitle: "Domestic/Intimate Partner Violence",
    togglerContent: `
      <ul>
        <li>
          <a href="Documents/Home visitors and DV resource-updated 0424.pdf">
            Guidance and resources for families experiencing DV/IPV (updated
            04/2024)
          </a>
        </li>
      </ul>
    `,
  },
];
---

<NetworkLayout
  title="Worker Roles"
  activeMainText="HFNY Network"
  activeSubText="HFNY Worker Roles"
>
  <h1 class="heading">Family Resource Specialist</h1>

  <div style="text-align: center;">
    <img src="/images/growingtogetherfaw.jpg" />
  </div>
  <div>
    <p>
      <h3>
        Click <a
          href="https://albany.az1.qualtrics.com/jfe/form/SV_bgb8ZyJ5JZglsEJ"
          >here for the HFNY Exit Survey</a
        >. <br />
        This survey is 100% anonymous and should be completed by all staff when HFNY
        employment has ended.
      </h3>
    </p>
    <h1>Resources for Family Resource Specialists</h1>
    <p class="instructions">
      Click on the sections to expand or click
      <a class="button" id="expandAll">Expand All</a>
      <a class="button" id="collapseAll" style="display:none;">Collapse All</a>
    </p>

    <Accordion accItems={accItems} id="frs-accordion" />
  </div>
</NetworkLayout>

<script type="text/javascript" is:inline>
  // Handle expand/collapse all functionality
  document.addEventListener("DOMContentLoaded", () => {
    const expandAllBtn = document.getElementById("expandAll");
    const collapseAllBtn = document.getElementById("collapseAll");

    expandAllBtn?.addEventListener("click", (e) => {
      e.preventDefault();
      document.querySelectorAll(".accordion-content").forEach((content) => {
        content?.style.display = "block";
      });
      expandAllBtn?.style.display = "none";
      collapseAllBtn?.style.display = "inline-block";
    });

    collapseAllBtn?.addEventListener("click", (e) => {
      e.preventDefault();
      document.querySelectorAll(".accordion-content").forEach((content) => {
        content?.style.display = "none";
      });
      expandAllBtn?.style.display = "inline-block";
      collapseAllBtn?.style.display = "none";
    });
  });
</script>
